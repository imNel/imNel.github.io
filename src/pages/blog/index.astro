---
import { getCollection } from "astro:content";
import BlogPost from "../../components/layouts/BlogPost.astro";
import TerminalHeader from "../../components/terminal/TerminalHeader.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<BlogPost title="Test">
  <ul>
    {
      posts.map((post, i) => {
        return (
          <li>
            <div
              class={
                "my-2 h-[1px] w-full bg-gunmetal dark:bg-ivory" +
                (i === 0 ? " hidden" : "")
              }
            />
            <a
              class="text-2xl underline decoration-transparent transition hover:decoration-gunmetal dark:hover:decoration-ivory"
              href={"/blog/" + post.slug}
            >
              {post.data.title}
            </a>
            <p class="font-mono ">{post.data.date.toLocaleDateString()}</p>
          </li>
        );
      })
    }
  </ul>
</BlogPost>
